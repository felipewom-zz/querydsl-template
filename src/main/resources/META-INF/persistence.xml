<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="1.0">
    <persistence-unit name="unit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>ru.trylogic.querydsl.example.User</class>
        <properties>
            <property name="hibernate.connection.url" value="${DB_URL}"/>
            <property name="connection.jdbc.driver" value="${DB_DRIVER}"/>
            <property name="hibernate.dialect" value="${DB_DIALECT}"/>
            <property name="javax.persistence.jdbc.user" value="${DB_USERNAME}" />
            <property name="javax.persistence.jdbc.password" value="" />
            <property name="hibernate.hbm2ddl.auto" value="create" />
        </properties>
    </persistence-unit>
</persistence>
